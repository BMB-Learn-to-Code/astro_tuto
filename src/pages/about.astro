---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "About Page";
const identity = {
  name: "Stern Lerner",
  country: "Germany",
  profession: "Developer",
  hobbies: ["Cycling", "Photography", "Traveling"],
};

const skils = ["JavaScript", "Astro", "React", "Node.js"];
// Style

const skillColor = "crimson";
const fontWeight = "bold";
const textCase = "uppercase";
const listStyle = "none";
---

<BaseLayout {pageTitle}>
  <style define:vars={{ skillColor, fontWeight, textCase, listStyle }}>
    h1 {
      color: purple;
      font-size: 4 rem;
    }
    .skill {
      color: var(--skillColor);
      list-style-type: var(--listStyle);
      font-weight: var(--fontWeight);
      text-transform: var(--textCase);
    }
  </style>
  <h1>{pageTitle}</h1>
  <p>
    This is project is the result of my journey learning Astro. My name is <strong
      >{identity.name}</strong
    > I'm a {identity.profession} from {identity.country} and I have {
      identity.hobbies.length > 1 ? (
        <span>
          these hobbies:{" "}
          {identity.hobbies.map((hobby, i) => {
            let separator = ".";
            if (i < identity.hobbies.length - 1) separator = ", ";
            console.log("hobby", hobby, "idx", i);
            return <strong>{hobby + separator}</strong>;
          })}
        </span>
      ) : (
        <span>{identity.hobbies[0]} as a hobby</span>
      )
    }
  </p>
  <p>My skills are:</p>
  <ul>
    {skils.map((skill) => <li class="skill">{skill}</li>)}
  </ul>
</BaseLayout>
